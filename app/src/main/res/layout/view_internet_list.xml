<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/internet_list_img"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">

            <TextView
                android:id="@+id/internet_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="name"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/internet_list_name"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/internet_type_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/internet_list_near_ticket"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/internet_type_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/internet_list_near_group"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/internet_type_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/internet_list_near_card"
                    android:visibility="gone" />

            </LinearLayout>


            <TextView
                android:id="@+id/internet_list_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/internet_list_name"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="1.2dp"
                android:ellipsize="end"
                android:hint="coupon"
                android:maxWidth="250dp"
                android:singleLine="true"
                android:textColor="@android:color/holo_red_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/internet_list_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="bottom"
                android:hint="location"
                android:maxWidth="150dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/internet_list_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/internet_list_info_map"
                android:drawableStart="@drawable/internet_list_info_map"
                android:hint="distance" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>